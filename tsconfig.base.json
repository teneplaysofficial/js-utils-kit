{
  "compilerOptions": {
    "target": "es2024",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@js-utils-kit/*": ["packages/@js-utils-kit/*/src"]
    },
    "types": ["vitest", "node"]
  }
}
