  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "prepare": "husky",
    "test": "turbo run test -- --coverage",
    "prebuild": "rimraf --glob \"packages/**/dist\"",
    "build": "turbo run build",
    "build:docs": "typedoc --tsconfig tsconfig.base.json && node -e \"require('node:fs').cpSync('google88133773e6f7fb4f.html', 'docs/google88133773e6f7fb4f.html')\"",
    "gen": "pnpm gen:exports",
    "gen:new": "node scripts/new-project.js",
    "gen:exports": "node scripts/exports.js",
    "checks": "node scripts/checks.js",
    "changeset": "changeset",
    "release:sync": "node scripts/sync-dependent-bumps.js",
    "version": "changeset version",
    "publish": "changeset publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check ."
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all",
    "tabWidth": 2
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.{js,ts,json,md}": "eslint --fix"
  },
  "dependencies": {
    "archiver": "catalog:",
    "figlet": "catalog:"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.7",
    "@changesets/parse": "^0.4.2",
