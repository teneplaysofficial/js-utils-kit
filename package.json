    "@eslint/js": "^9.39.1",
    "@eslint/json": "^1.0.0",
    "@eslint/markdown": "^7.5.1",
    "@manypkg/get-packages": "^3.1.0",
    "@types/archiver": "^7.0.0",
    "@types/figlet": "^1.7.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.14",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.39.1",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "sylog": "^2.1.0",
    "ts-morph": "^27.0.2",
    "tsdown": "^0.20.0",
    "turbo": "^2.6.1",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  }
